@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="contact-section vh-100 d-flex align-items-stretch text-white">
    <!-- Left: Hero / Info -->
    <div class="col-md-6 d-flex align-items-center justify-content-center text-center text-md-start p-5 contact-hero">
        <div class="content">
            <h1 class="display-5 fw-bold mb-3">Get in Touch</h1>
            
            
            <div class="lead mb-4">
                <div style="max-height:400px">
                    <img src="~/images/education.gif" />
                </div>
            </div>
           
        </div>
    </div>

    <!-- Right: Form -->
    <div class="col-md-6 bg-light d-flex align-items-center justify-content-center">
        <div class="card shadow-sm border-0 w-75 p-4">
            <h4 class="fw-bold text-primary mb-4">Send Us a Message</h4>

            @if (TempData["ContactSuccess"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["ContactSuccess"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="SendContact" method="post">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Full Name</label>
                    <input type="text" name="Name" class="form-control" placeholder="Your Name" required />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Email Address</label>
                    <input type="email" name="Email" class="form-control" placeholder="you@example.com" required />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Phone Number</label>
                    <input type="text" name="Phone" class="form-control" placeholder="+27 00 000 0000" />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Message</label>
                    <textarea name="Message" rows="5" class="form-control" placeholder="Write your message here..." required></textarea>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-send me-2"></i>Send Message
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

<!-- Map Section -->
<section class="p-0" style="margin-top:30px">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3312.905!2d18.4241!3d-33.9249!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1dcc67655b6b1d63%3A0xceb7f!2sCape%20Town%2C%20South%20Africa!5e0!3m2!1sen!2sza!4v1684505123"
            width="100%" height="350" style="border:0;" allowfullscreen="" loading="lazy">
    </iframe>
</section>
