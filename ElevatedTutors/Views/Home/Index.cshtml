<!-- FAQ SECTION -->
<section class="faq" id="faq">
    <h2>Frequently Asked Questions</h2>
    <div class="faq-grid">
        <div class="faq-item">
            <button class="faq-question">How do I register?</button>
            <div class="faq-answer">Click “Enroll Now” and fill out the registration form.</div>
        </div>

        <div class="faq-item">
            <button class="faq-question">Can I choose my tutor?</button>
            <div class="faq-answer">Yes! You can select from a list of available tutors after registering.</div>
        </div>

        <div class="faq-item">
            <button class="faq-question">Are the sessions online or in-person?</button>
            <div class="faq-answer">We offer both online and in-person tutoring options to fit your schedule.</div>
        </div>

        <div class="faq-item">
            <button class="faq-question">Do you provide progress reports?</button>
            <div class="faq-answer">Yes, tutors provide regular progress feedback for students and parents.</div>
        </div>
    </div>
</section>

<!-- STUDENT REVIEWS -->
<section class="reviews" id="reviews">
    <h2>What Students Say</h2>
    <div class="review-container">
        <div class="review">
            <p>“Elevated Tutors helped me boost my math grade from 60% to 85%! Highly recommended.”</p>
            <span>- Thabo, Student</span>
        </div>
        <div class="review">
            <p>“The lessons are engaging and personalized. My tutor always makes sure I understand before moving on.”</p>
            <span>- Zanele, Student</span>
        </div>
        <div class="review">
            <p>“I gained confidence and better study habits thanks to my tutor!”</p>
            <span>- Lerato, Student</span>
        </div>
    </div>
</section>

<script>

    const navLinks = document.querySelectorAll('.nav-links a');

    window.addEventListener('scroll', () => {
        let fromTop = window.scrollY + 100;

        navLinks.forEach(link => {
            const section = document.querySelector(link.hash);
            if (section && section.offsetTop <= fromTop &&
                section.offsetTop + section.offsetHeight > fromTop) {
                link.classList.add('active');
            } else {
                link.classList.remove('active');
            }
        });
    });

    // FAQ toggle
     document.querySelectorAll(".faq-question").forEach(button => {
        button.addEventListener("click", () => {
            const answer = button.nextElementSibling;
            button.classList.toggle("active");
            answer.style.display = answer.style.display === "block" ? "none" : "block";
        });
    });

    // Testimonials auto-scroll
     const track = document.getElementById("testimonialTrack");
    let scrollX = 0;
    setInterval(() => {
        scrollX += 350;
        if (scrollX >= track.scrollWidth - track.clientWidth) {
            scrollX = 0;
        }
        track.scrollTo({
            left: scrollX,
            behavior: "smooth"
        });
    }, 3500);
</script>
