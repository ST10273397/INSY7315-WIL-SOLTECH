@using ElevatedTutors.ViewModel

@model StudentClassesViewModel
@* 
    View: Classes.cshtml
    Folder: Student
    Purpose: Render the Classes page for Student controller.
    Notes: Updated for consistent layout, error handling, anti-forgery protection, and safe rendering.
*@

@* Begin model null-safety wrapper *@
@if (Model == null)
{
    <div class="alert alert-warning" role="alert">
        No data available to display.
    </div>
}
else
{


<h2>Classes</h2>

@if (Model.Classes.Any())
{
    <ul>
        @foreach (var c in Model.Classes)
        {
            <li>
                <strong>@c.SubjectName</strong><br />
                Tutor: @c.TutorUser.User.FirstName @c.TutorUser.User.Surname<br />
                @c.SubjectDesc
            </li>
        }
    </ul>
}
else
{
    <p>No subjects assigned yet.</p>
}

}
@* End model wrapper *@
