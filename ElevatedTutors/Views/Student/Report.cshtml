@using ElevatedTutors.ViewModel

@model IEnumerable<ReportViewModel>
@* 
    View: Report.cshtml
    Folder: Student
    Purpose: Render the Report page for Student controller.
    Notes: Updated for consistent layout, error handling, anti-forgery protection, and safe rendering.
*@

@* Begin model null-safety wrapper *@
@if (Model == null)
{
    <div class="alert alert-warning" role="alert">
        No data available to display.
    </div>
}
else
{


<h2>Report</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Subject</th>
            <th>Submitted Files</th>
            <th>Results</th>
            <th>Submission status</th>
            <th>Feedback</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var submission in Model)
        {
            <tr>
                <td>@submission.Title</td>
                <td>@submission.SubjectName</td>
                <td>@submission.FileCount</td>
                <td>@submission.Grade</td>
                <td>@submission.Status</td>
                <td>
                    <a asp-action="Feedback" asp-route-id="@submission.SubmissionId">
                        Feedback
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
@* End model wrapper *@
