@using ElevatedTutors.ViewModel
@model StudentScheduleViewModel
@* 
    View: Schedule.cshtml
    Folder: Student
    Purpose: Render the Schedule page for Student controller.
    Notes: Updated for consistent layout, error handling, anti-forgery protection, and safe rendering.
*@

@* Begin model null-safety wrapper *@
@if (Model == null)
{
    <div class="alert alert-warning" role="alert">
        No data available to display.
    </div>
}
else
{


<h2>Schedule</h2>



<h3>Upcoming Due Dates</h3>
<ul>
    @foreach (var sub in Model.DueDates.OrderBy(d => d.UploadDate))
    {
        <li>
            <strong>@sub.Title</strong> — @sub.Subject.SubjectName
            <br />Due: @sub.UploadDate.ToShortDateString()
        </li>
    }
</ul>


}
@* End model wrapper *@
